#!/bin/bash

jobi=$1
numjobs=$2
perdir=$3
gpfile=$4
outdir=$5

draw-gpr $gpfile -s $jobi -n $numjobs -N $perdir -o $outdir

for job in $(seq $jobi $(($jobi+$numjobs-1)))
do
	echo $job
	dirnum=$(($job/$perdir))
	printf -v dircode "%06d" $dirnum
	printf -v jobcode "%06d" $job

	integrate-phi $outdir/DRAWmod$perdir-$dircode/draw-gpr-$jobcode.csv 2.32e10 -o $outdir/DRAWmod$perdir-$dircode/eos-draw-$jobcode.csv --sigma-pressurec2 1e10 --stitch-below-reference-pressure --crust-eos sly
done
