#!/bin/bash

indir=$1 #./eos-inf
jobi=$2 #0
numjobs=$3 #1000
perdir=$4 #100
mpereos=$5 #1
gwfile=$6 #${indir}/in/gwPhenomPNRT_post-lospin.csv
gpfile=$7 #${indir}/in/gpr_phi.hdf5
dbdir=$8 #./tmp
outdir=$9 #./tmp_1k
mrng=${10} #1.06,1.46,1.24,1.72
Mcrng=${11} #1.184,1.188
Mobs=${12} #1.93
crustdir=${13} # ./gpr-eos-gw170817/eos/eos

sampfile=$outdir/SAMP.csv
weightsfile=$outdir/SAMPweights.csv

if test ! -f "$dbdir/CRUSTS.dat"; then

	draweos $jobi $numjobs $perdir $gpfile $dbdir $crustdir

	getprops $jobi $numjobs $perdir $dbdir

fi

getbinaries $mpereos -v -m $mrng -M $Mcrng -d $dbdir/ -o $outdir/

collectbinaries -v -M $Mobs -d $outdir/ -o $outdir/

weighsamps $gwfile $sampfile $weightsfile

plotposts $sampfile $weightsfile $gwfile $outdir $indir $perdir

#kde-corner-samples -s GPprior $sampfile -s GPpost $weightsfile -s GWpost $gwfile -v --weight-column GPpost logweights --weight-column-is-log GPpost -o $outdir m1_source m2_source lambda1 lambda2 --color GPprior blue --color GPpost red --color GWpost green -r m1_source 1.25 1.75 -r m2_source 1.0 1.5 -r lambda1 0. 1500. -r lambda2 0. 2000. -b m1_source 0.02 -b m2_source 0.02 -b lambda1 10. -b lambda2 10. --reference SLY $indir/dat/REF-sly.csv --reference H4 $indir/dat/REF-h4.csv --reference MS1 $indir/dat/REF-ms1.csv --reference-color SLY gray --reference-color H4 gray --reference-color MS1 gray --figheight 12 --figwidth 12

#plot-process -s GPprior ./dat/SAMP.csv -s GPpost ./dat/SAMPweights.csv -v --weight-column GPpost logweights --weight-column-is-log GPpost -o ./dat/ pressurec2 baryon_density 1e12 1e16 --eos-column GPprior EoS --eos-column GPpost EoS --eos-dir GPprior ./dat/eos/ --eos-dir GPpost ./dat/eos/ --eos-basename GPprior eos-draw-%06d.csv --eos-basename GPpost eos-draw-%06d.csv --bns-dir GPprior ./dat/ --bns-dir GPpost ./dat/ --bns-basename GPprior macro-draw-%06d.csv --bns-basename GPpost macro-draw-%06d.csv -l pressurec2 -l baryon_density
