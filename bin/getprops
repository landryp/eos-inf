#!/bin/bash

jobi=$1
numjobs=$2
perdir=$3

for job in $(seq $jobi $(($jobi+$numjobs-1)))
do
	echo $job
	dirnum=$(($job/$perdir))
	printf -v dircode "%06d" $dirnum
	printf -v jobcode "%06d" $job

	getnsprops eos-draw-$jobcode.csv -p R,M,Lambda,I -d $PWD/dat/DRAWmod$perdir-$dircode/ -o $PWD/dat/DRAWmod$perdir-$dircode/
	
	splitbranches macro-draw-$jobcode.csv -d $PWD/dat/DRAWmod$perdir-$dircode/ -o $PWD/dat/DRAWmod$perdir-$dircode/ -f MACROdraw-$jobcode -t "" 
	
	plotprops macro-draw-$jobcode.csv -p rhoc,R,Lambda,I -d $PWD/dat/DRAWmod$perdir-$dircode/ -o $PWD/dat/DRAWmod$perdir-$dircode/MACROdraw-$jobcode/ -t draw-$jobcode
done
