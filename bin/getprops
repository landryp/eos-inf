#!/bin/bash

jobi=$1
numjobs=$2
perdir=$3
outdir=$4

for job in $(seq $jobi $(($jobi+$numjobs-1)))
do
	echo $job
	dirnum=$(($job/$perdir))
	printf -v dircode "%06d" $dirnum
	printf -v jobcode "%06d" $job

	getnsprops eos-draw-$jobcode.csv -v -p R,M,Lambda,I,Mb -d $outdir/DRAWmod$perdir-$dircode/ -o $outdir/DRAWmod$perdir-$dircode/
	
	splitbranches macro-draw-$jobcode.csv -v -d $outdir/DRAWmod$perdir-$dircode/ -o $outdir/DRAWmod$perdir-$dircode/ -f MACROdraw-$jobcode -t "" 
	
	plotprops macro-draw-$jobcode.csv -v -p rhoc,R,Lambda,I,Mb -d $outdir/DRAWmod$perdir-$dircode/ -o $outdir/DRAWmod$perdir-$dircode/MACROdraw-$jobcode/ -t draw-$jobcode
done
